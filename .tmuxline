# This tmux statusbar config was created by tmuxline.vim
# on 三, 23 10月 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#BEB6AE,bg=#433B32"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#57826D"
set -g status-style "none,bg=#2C2620"
set -g message-style "fg=#BEB6AE,bg=#433B32"
set -g pane-border-style "fg=#433B32"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#828257,bg=#2C2620"
set -g status-left "#[fg=#2C2620,bg=#57826D] #(hostname -s):#S #[fg=#57826D,bg=#2C2620,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#433B32,bg=#2C2620,nobold,nounderscore,noitalics]#[fg=#BEB6AE,bg=#433B32] CPU: #{cpu_icon} #{cpu_percentage} RAM: #{ram_icon} #{ram_percentage}  %Y-%m-%d  %H:%M #[fg=#57826D,bg=#433B32,nobold,nounderscore,noitalics]#[fg=#2C2620,bg=#57826D]"
setw -g window-status-format "#[fg=#828257,bg=#2C2620] #I #[fg=#828257,bg=#2C2620] #W "
setw -g window-status-current-format "#[fg=#2C2620,bg=#433B32,nobold,nounderscore,noitalics]#[fg=#BEB6AE,bg=#433B32] #I #[fg=#BEB6AE,bg=#433B32] #W #[fg=#433B32,bg=#2C2620,nobold,nounderscore,noitalics]"
